		$(".pics_first").val('');
	},
	setform : function(){
		if(this.formcheck()) {
			var options = {
			    dataType:	'json',
			    beforeSend: function(){
					$("#form_result").html("正在提交表单，请稍候...");
			    },
			    success: function(data) {
				    data = data.data;
			    	var flag = data[0];
			    	var msg = data[1];
			    	$("#form_result").html(msg);
