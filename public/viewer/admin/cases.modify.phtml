		$("#pics_box").append("<p>" + model + " <button type=\"button\" onClick=\"pagejs.plusPicsSpan(this);\">-</button></p>");
		$("#picsnum").val(num);
	},
	plusPicsSpan : function(btnObj){
		$(btnObj).parent("p").remove();
	},
